# ============================================================================
# Market Manus - Trading Automation System Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit your .env file to version control!

# ============================================================================
# EXCHANGE API CREDENTIALS
# ============================================================================

# Binance API (Primary data source for trading)
# Get your keys at: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Bybit API (Alternative data source & derivatives)
# Get your keys at: https://www.bybit.com/app/user/api-management
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_TESTNET=true  # Set to false for production trading
BYBIT_MODE=real     # or 'demo' for testnet

# ============================================================================
# MARKET SENTIMENT ANALYSIS APIs
# ============================================================================

# CryptoPanic - News sentiment analysis
# Get your token at: https://cryptopanic.com/developers/api/
CRYPTOPANIC_TOKEN=your_cryptopanic_token_here
CRYPTOPANIC_API_PLAN=developer  # Options: free, developer, pro

# CoinGlass - Derivatives & Open Interest data
# Get your key at: https://www.coinglass.com/
COINGLASS_API_KEY=your_coinglass_api_key_here

# Santiment - On-chain & social metrics
# Get your key at: https://app.santiment.net/
SANTIMENT_API_KEY=your_santiment_api_key_here

# Glassnode - On-chain analytics
# Get your key at: https://studio.glassnode.com/
GLASSNODE_API_KEY=your_glassnode_api_key_here

# ============================================================================
# AI & ASSISTANT APIs
# ============================================================================

# OpenAI API (For AI assistant features)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Manus AI API (Premium AI-powered market analysis)
# Get your key at: https://manus.im
# 1,000 free credits + 300 daily credits available
MANUS_AI_API_KEY=your_manus_ai_api_key_here

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite database path (default local storage)
DATABASE_URL=sqlite:///data/market_manus.db

# PostgreSQL (optional - for production deployment)
# DATABASE_URL=postgresql://user:password@localhost:5432/market_manus

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================

# Initial capital for backtesting and paper trading
DEFAULT_CAPITAL=1000.0

# Position size as percentage of capital (2% recommended)
DEFAULT_POSITION_SIZE=2.0

# Maximum allowed drawdown percentage before circuit breaker
MAX_DRAWDOWN=50.0

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/market_manus.log

# Debug mode (enables verbose output)
DEBUG=False

# Testnet mode (use test APIs when available)
TESTNET=True

# ============================================================================
# AI AGENT CONFIGURATION (Optional)
# ============================================================================

# Reinforcement learning parameters
AI_LEARNING_RATE=0.1
AI_EXPLORATION_RATE=0.2

# ============================================================================
# NOTES
# ============================================================================
# 
# Required for basic functionality:
# - BINANCE_API_KEY & BINANCE_API_SECRET (for trading data)
# - OPENAI_API_KEY (optional, for AI assistant)
#
# Required for Market Sentiment Analysis:
# - CRYPTOPANIC_TOKEN (for news sentiment)
# - At least one of: COINGLASS_API_KEY, SANTIMENT_API_KEY, GLASSNODE_API_KEY
#
# The system will work with partial configuration, but features requiring
# missing API keys will be disabled gracefully.
#
