{
  "version": "2.0",
  "integration": {
    "risk_management": true,
    "market_analysis": true,
    "orchestrator": true
  },
  "symbols": ["BTCUSDT", "ETHUSDT", "BNBUSDT", "ADAUSDT", "XRPUSDT"],
  "strategies": [
    "ema_crossover_optimized",
    "rsi_mean_reversion_optimized", 
    "bollinger_breakout_optimized"
  ],
  "timeframes": ["5", "15", "30", "60"],
  "default_parameters": {
    "initial_capital": 10000,
    "commission": 0.001,
    "slippage": 0.0002,
    "use_risk_management": true,
    "use_market_filters": true
  },
  "strategy_parameters": {
    "ema_crossover_optimized": {
      "fast_period": 21,
      "slow_period": 50,
      "trend_period": 200,
      "volume_multiplier": 1.5,
      "adx_threshold": 25,
      "atr_stop_multiplier": 2.0
    },
    "rsi_mean_reversion_optimized": {
      "rsi_period": 14,
      "oversold": 25,
      "overbought": 75,
      "atr_stop_multiplier": 1.5,
      "take_profit_ratio": 2.0,
      "volatility_threshold": 1.2
    }
  },
  "test_scenarios": [
    {
      "name": "bull_market_2024_q1",
      "period": "2024-01-01_to_2024-03-31",
      "market_type": "bull",
      "description": "Bull market Q1 2024"
    },
    {
      "name": "bear_market_2024_q2",
      "period": "2024-04-01_to_2024-06-30", 
      "market_type": "bear",
      "description": "Bear market Q2 2024"
    },
    {
      "name": "sideways_market_2024_q3",
      "period": "2024-07-01_to_2024-09-30",
      "market_type": "sideways", 
      "description": "Sideways market Q3 2024"
    },
    {
      "name": "volatile_market_2024_q4",
      "period": "2024-10-01_to_2024-12-31",
      "market_type": "volatile",
      "description": "Volatile market Q4 2024"
    }
  ],
  "personalization_levels": {
    "basic": {
      "user_inputs": ["symbol", "timeframe", "period"],
      "auto_config": ["strategy", "risk_params", "filters"]
    },
    "intermediate": {
      "user_inputs": ["symbol", "timeframe", "period", "strategy", "risk_level"],
      "auto_config": ["detailed_params", "filters"]
    },
    "advanced": {
      "user_inputs": ["symbol", "timeframe", "period", "strategy", "risk_params"],
      "auto_config": ["filters"]
    },
    "expert": {
      "user_inputs": ["all_parameters"],
      "auto_config": []
    }
  }
}

